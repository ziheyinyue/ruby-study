<h1 class="c-title__large u-mb15">All Users</h1>

<% @users.each do |user| %>
<ul>
  <div class="row">
    <div class="col-md-12">
      <li class="well">
        <div class="d-flex align-items-center">
        <%= link_to gravatar_for(user), user_path(user), class: "u-mr20" %>
        <%= link_to user.username, user_path(user) %>
        </div>
        <% if logged_in? and current_user.admin? %>
          <div class="text-right">
            <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete the user and all their articles"} %>
          </div>
        <% end %>
      </li>
    </div>
  </div>
</ul>

<% end %>

<div>
  <%= will_paginate %>
</div>